<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ovh.dessert.tpe.repertoiredestagesm2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MenuActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_menu" />
        <activity
            android:name=".DebuggingActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_debug" />
        <activity
            android:name=".SearchMap"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_search_map" />
        <activity
            android:name=".EntreListeActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_entreliste" />
        <activity
            android:name=".MainMenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".TabbedActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_activityab"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".OptionsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_options"/>
        <activity
            android:name=".StudentActivity"
            android:label="@string/title_activity_student"
            android:screenOrientation="portrait" />

        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>